<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".main.tab1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal|center_vertical"
        android:text="Pune Guide "
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:scrollY="0dp">

            <Button
                android:id="@+id/bus1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/bus"
                android:text="BUS"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintStart_toEndOf="@+id/theaterslist"
                app:layout_constraintTop_toBottomOf="@+id/bookmarket" />

            <Button
                android:id="@+id/transport"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"

                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/transport"
                android:text="TRANSPORT"
                app:layout_constraintBottom_toTopOf="@+id/traintype"
                app:layout_constraintEnd_toStartOf="@+id/hostelarea"
                app:layout_constraintStart_toEndOf="@id/collegearea"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/hostelarea"
                android:layout_width="90dp"
                android:layout_height="90dp"


                android:layout_marginStart="12dp"

                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/hostel"
                android:text="HOSTELS"
                app:layout_constraintBottom_toTopOf="@+id/airport"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/transport"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/collegearea"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"


                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/college"
                android:text="COLLEGES"
                app:layout_constraintBottom_toTopOf="@+id/hotelarea"
                app:layout_constraintEnd_toStartOf="@+id/transport"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"


                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/bus"
                android:text="BUS"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bookmarket"
                app:layout_constraintTop_toBottomOf="@+id/touristplaceslist"
                tools:visibility="visible" />

            <Button
                android:id="@+id/airport"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/airport"
                android:text="airport"
                app:layout_constraintBottom_toTopOf="@+id/touristplaceslist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/traintype"
                app:layout_constraintTop_toBottomOf="@+id/hostelarea" />

            <Button
                android:id="@+id/hotelarea"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"

                android:background="@android:color/transparent"
                android:drawableTop="@drawable/hotel1"
                android:text="HOTELS"
                app:layout_constraintBottom_toTopOf="@+id/hospitalarea"
                app:layout_constraintEnd_toStartOf="@+id/traintype"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/collegearea" />


            <Button
                android:id="@+id/theaterslist"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/theater"
                android:text="THEATER"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/bus1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/religiousplacestypelist" />

            <Button
                android:id="@+id/traintype"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/train"
                android:text="TRAIN"
                app:layout_constraintBottom_toTopOf="@+id/shopping"
                app:layout_constraintEnd_toStartOf="@+id/airport"
                app:layout_constraintStart_toEndOf="@+id/hotelarea"
                app:layout_constraintTop_toBottomOf="@+id/transport" />

            <Button
                android:id="@+id/shopping"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/shopping"
                android:text="SHOPPING"
                app:layout_constraintBottom_toTopOf="@+id/bookmarket"
                app:layout_constraintEnd_toStartOf="@+id/touristplaceslist"
                app:layout_constraintHorizontal_bias="0.537"
                app:layout_constraintStart_toEndOf="@+id/hospitalarea"
                app:layout_constraintTop_toBottomOf="@+id/traintype" />

            <Button
                android:id="@+id/hospitalarea"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"


                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/hospital"
                android:text="HOSPITALS"
                app:layout_constraintBottom_toTopOf="@+id/religiousplacestypelist"
                app:layout_constraintEnd_toStartOf="@+id/shopping"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hotelarea" />

            <Button
                android:id="@+id/touristplaceslist"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/tourist1"
                android:text="TOURIST PLACES"
                app:layout_constraintBottom_toTopOf="@+id/bus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/shopping"
                app:layout_constraintTop_toBottomOf="@+id/airport" />

            <Button
                android:id="@+id/religiousplacestypelist"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/religion1"
                android:text="RELIGIOUS PLACES"
                app:layout_constraintBottom_toTopOf="@+id/theaterslist"
                app:layout_constraintEnd_toStartOf="@+id/bookmarket"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hospitalarea" />

            <Button
                android:id="@+id/bookmarket"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/books"
                android:text="BOOK MARKET"
                app:layout_constraintBottom_toTopOf="@+id/bus1"
                app:layout_constraintEnd_toStartOf="@+id/bus"
                app:layout_constraintStart_toEndOf="@+id/religiousplacestypelist"
                app:layout_constraintTop_toBottomOf="@+id/shopping" />

            <Button
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="24dp"
                android:text="Button"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bus1"
                app:layout_constraintTop_toBottomOf="@+id/bus" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</LinearLayout>